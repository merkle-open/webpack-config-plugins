{
  "name": "ts-config-webpack-plugin",
  "description": "Preset for typescript webpack configuration",
  "bugs": "https://github.com/merkle-open/webpack-config-plugins/issues",
  "homepage": "https://github.com/merkle-open/webpack-config-plugins/tree/master/packages/ts-config-webpack-plugin",
  "repository": "https://github.com/merkle-open/webpack-config-plugins.git",
  "version": "2.0.3",
  "author": "Merkle Inc",
  "license": "MIT",
  "main": "src/index.js",
  "keywords": [
    "ts-loader",
    "typescript-loader",
    "webpack",
    "loader",
    "typescript",
    "ts"
  ],
  "scripts": {
    "test": "jest --runInBand --verbose --detectOpenHandles --forceExit",
    "posttest": "tsc",
    "update-snapshots": "jest -u --runInBand",
    "test-watch": "jest --watch --runInBand"
  },
  "peerDependencies": {
    "typescript": ">=3.1.0",
    "webpack": ">=4.36.0"
  },
  "dependencies": {
    "cache-loader": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^6.2.1",
    "thread-loader": "^3.0.3",
    "ts-loader": "^8.1.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.14",
    "@types/node": "14.14.41",
    "@types/webpack": "4.41.27",
    "jest": "23.6.0",
    "rimraf": "3.0.2",
    "sourcemap-validator": "2.1.0",
    "ts-essentials": "7.0.1",
    "tslint": "6.1.3",
    "typescript": "4.2.4",
    "webpack": "4.46.0"
  },
  "jest": {
    "browser": false,
    "testEnvironment": "node",
    "rootDir": "./",
    "watchPathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "fixtures",
      "dist"
    ]
  },
  "engines": {
    "npm": ">=6",
    "node": ">=10"
  }
}
